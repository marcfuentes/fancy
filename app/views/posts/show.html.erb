
<p id="notice"><%= notice %></p>

<div class="container">



<p>
 
  <h2><%= @post.title %></h2>
</p>

<p>

  <%= image_tag(@post.picture_url, :width => 800) if @post.picture.present? %>
</p>


<%= link_to 'Edit', edit_post_path(@post), :class => 'btn btn-info' %> 
<%= link_to 'Back', posts_path, :class => 'btn' %>
<%= link_to 'Destroy', @post, confirm: 'Are you sure?', method: :delete, :class => 'btn btn-danger' %> 
</div>
<div class="container">
  <div class="row">

          

    <div class="span6 offset3">
        <div class="well well large">

          
  

             <%= image_tag(@post.picture_url, :width => '100%') if @post.picture.present? %>

             <h2><%= @post.title %></h2>


             <% if current_user == @post.user %>
             <p>
              <%= link_to 'Editar', edit_post_path(@post), :class => 'btn btn-info' %> 
              <%= link_to 'Borrar', @post, confirm: 'Are you sure?', method: :delete, :class => 'btn btn-info' %> 
             </p>
            <% end %>


           

            <h4>Comentarios</h4>
              <div id="comments">
                <%= render :partial => @post.comments %>
              </div>
              <%= simple_form_for [@post, Comment.new] do |f| %>
              <h2>
                 <%= f.input :body, :label => "Nuevo Comentario", as: :text, input_html: 
                 { rows: "3" } %>
              </h2>
              <p><%= f.submit "Agrega Comentario", class: "btn btn-primary" %></p>
            <% end %>
            
          </div>
        </div>


        </div>
    </div>
   </div>
</div>    

 <%= link_to 'Volver', posts_path, :class => 'btn btn-primary' %>

